# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/authdb?schema=public"

# For Docker Compose (when running with docker-compose up)
# DATABASE_URL="postgresql://postgres:password@postgres:5432/authdb?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-very-long-and-secure"
JWT_EXPIRATION="30m"
JWT_REMEMBER_EXPIRATION="7d"

# Application Configuration
NODE_ENV="development"
PORT=8000

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Cookie Configuration
COOKIE_DOMAIN="localhost"
COOKIE_SECURE="false"
COOKIE_SAME_SITE="lax"

# Database Credentials (if using individual env vars)
DB_HOST="localhost"
DB_PORT="5432"
DB_USERNAME="postgres"
DB_PASSWORD="password"
DB_NAME="authdb"

# API Configuration
API_PREFIX="api"
API_VERSION="v1"

# Logging
LOG_LEVEL="debug"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# Password Requirements
PASSWORD_MIN_LENGTH="8"
SHOP_NAMES_MIN_COUNT="3"
